<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#D2CBBB">

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/camButt"
        android:background="@drawable/camera"
        android:layout_gravity="right|top"
        android:layout_marginBottom="97dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignRight="@+id/imageView" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/galleryButt"
        android:background="@drawable/gallery"
        android:layout_gravity="left|top"
        android:layout_alignTop="@+id/camButt"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gallery"
        android:id="@+id/textView"
        android:layout_below="@+id/galleryButt"
        android:layout_alignEnd="@+id/galleryButt"
        android:layout_alignStart="@+id/galleryButt"
        android:layout_alignLeft="@+id/galleryButt"
        android:layout_alignRight="@+id/galleryButt"
        android:textSize="12dp"
        android:textAlignment="center"
        android:textColor="#333" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:id="@+id/textView2"
        android:textSize="12dp"
        android:textAlignment="center"
        android:layout_below="@+id/galleryButt"
        android:layout_alignStart="@+id/camButt"
        android:layout_alignEnd="@+id/camButt"
        android:layout_alignLeft="@+id/camButt"
        android:layout_alignRight="@+id/camButt"
        android:textColor="#333" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:id="@+id/imageView"
        android:scaleType="fitCenter"
        android:src="@drawable/bob_ross"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_weight="1"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"/>/>
</RelativeLayout>
